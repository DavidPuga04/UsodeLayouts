<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsodeLayouts.GridPage"
             Title="Grid Layout">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <BoxView Grid.Row="0" Grid.Column="0" Color="Red"/>
        <BoxView Grid.Row="0" Grid.Column="1" Color="Blue"/>
        <BoxView Grid.Row="1" Grid.Column="0" Color="Green"/>
        <StackLayout Grid.Row="1" Grid.Column="1">
            <BoxView HeightRequest="100" WidthRequest="100" Color="Yellow"/>
            <Button Text="Ir a StackLayout" Clicked="Button_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
