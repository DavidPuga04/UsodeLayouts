<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsodeLayouts.AbsolutePage"
             Title="Absolute Layout">
    <ScrollView>
        <AbsoluteLayout HeightRequest="1000">
            <Image Source="icon.png" AbsoluteLayout.LayoutBounds="0,0,50,50" AbsoluteLayout.LayoutFlags="None"/>
            <Button Text="Volver a GridLayout"
                    AbsoluteLayout.LayoutBounds="1,1,150,50"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    Clicked="Button_Clicked"/>
        </AbsoluteLayout>
    </ScrollView>
</ContentPage>